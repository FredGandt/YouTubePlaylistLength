{
	"manifest_version": 2,
	"name": "YouTubePlaylistLength",
	"description": "Show total length of YouTube playlists",
	"version": "0.0.3",
	"offline_enabled": false,
	"permissions": [ "https://www.youtube.com/" ],
	"page_action": { "default_title": "YouTube Playlist Length" },
	"content_scripts": [ {
		"matches": [ "https://www.youtube.com/*" ],
		"js": [ "ytpll.js" ]
	} ]
}
